{
  "name": "<%= appId %>",
  "version": "0.0.0",
  "description": "<%= appDescription %>",
  "homepage": "",
  <% if (locals.authorName && locals.authorEmail && locals.authorUrl) { %>
  "author": {
      "name": "<%= authorName %>",
      "email": "<%= authorEmail %>",
      "url": "<%= authorUrl %>"
    },
  <%
  } %>
  "keywords": [
    "notifiles"
  ],
  "engines": {
    "npm": ">= 4.0.0"
  },
  "type": "module",
  "dependencies": {
    "@react-email/components": "0.0.18",
    "react": "^18.2.0",
    "react-email": "2.1.3"
  },
  "scripts": {
    "start": "node --require=dotenv/config --es-module-specifier-resolution=node --experimental-specifier-resolution=node index.js",
    "test": "yarn node --require=dotenv/config --experimental-vm-modules --experimental-specifier-resolution=node $(yarn bin jest) --config ./jest.config.json",
    "test:watch": "yarn test -- --watch",
    "pretest": "eslint ."
  },
  "devDependencies": {
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@notifiles/sdk": "^1.1.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  <% if (locals.license) { %>"license": "<%= license %>"<%
  } %>
}
